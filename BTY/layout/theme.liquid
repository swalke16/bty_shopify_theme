<!doctype html>
<html lang="en">
<head>

  <link rel="shortcut icon" href="{{ 'favicon.png' | asset_url }}" type="image/png" />
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">

  <title>{% if template == "404" %}Page not found{% elsif template == 'index' %}{{ shop.name }}{% else %}{{ page_title }} - {{ shop.name }}{% endif %}</title>

  {% if page_description %}
  <meta name="description" content="{{ page_description }}" />
  {% endif %}

  <meta name="author" content="{{ settings.meta_author }}" />

  <link rel="canonical" href="{{ canonical_url }}" />

  {% include 'fb-open-graph-tags' %}

  {{ 'normalize.css' | asset_url | stylesheet_tag }}
  {{ 'all.css' | asset_url | stylesheet_tag }}

  {{ content_for_header }}

  <script type="text/javascript" src="//ajax.googleapis.com/ajax/libs/jquery/1.10.1/jquery.min.js"></script>

  {{ 'option_selection.js' | shopify_asset_url | script_tag }}
  {{ 'api.jquery.js' | shopify_asset_url | script_tag }}

  {% if template contains 'customers' %}
  {{ 'shopify_common.js' | shopify_asset_url | script_tag }}
  {{ 'customer_area.js'  | shopify_asset_url | script_tag }}
  {% endif %}

</head>

<body>

  <!-- Begin header -->
  <div class="dropdown">
    <!-- TODO: these come from collections... -->
    <div class="container">
      <a>CFNA</a>
      <a>CF2</a>
      <a>FIT CLUB</a>
      <a>BUCKEYE crossfit</a>
    </div>
  </div>

  <div class="container">
    <header>
      {% include 'customer_links' %}
      <div class="nav_bar">
        <a href="/">
          <h1 class="logo"></h1>
        </a>
        <nav>
          <a>Affiliates</a>
          {% for link in linklists.main-menu.links %}
            <a class="{{link.title | handelize}}_link"  href="{{ link.url }}" title="{{ link.title }}">{{ link.title }}</a>
          {% endfor %}
          <a class="checkout" href="/cart" title="Shopping Cart">
            <div class="cart">
              <div class="total">
                {{ cart.item_count }}
              </div>
            </div>
          </a>
        </nav>
      </div>
    </header>
  </div>
  <!-- End header -->

  {{ content_for_layout }}

  <!-- Begin footer -->
  <footer>
    <div class="container">
      {% for link in linklists.footer.links %}
      <a href="{{ link.url }}" title="{{ link.title }}">{{ link.title }}</a>
      {% endfor %}
    </div>
  </footer>
  <!-- End footer -->

  {{ 'all.js' | asset_url | script_tag }}

</body>
</html>
